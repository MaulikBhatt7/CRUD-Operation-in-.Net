
@model CityModel;
<div>
    <a asp-controller="Home" asp-action="SQLView" class="btn-primary btn">Country</a>
    <form method="post" asp-controller="Home">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label>City Name</label>
            <input type="text" asp-for="CityName" />
            <span asp-validation-for="CityName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>City Code</label>
            <input type="text" asp-for="CityCode" />
            <span asp-validation-for="CityCode" class="text-danger"></span>
        </div>
        <input type="submit" value="Save" class="submit" />
    </form>


</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}








