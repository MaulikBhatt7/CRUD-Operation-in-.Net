@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    @using System.Data
    @using CRUD_Operations.Areas.LOC_Country.Models
    @using CRUD_Operations.Areas.LOC_State.Models
    @model StudentModel
}

<form method="post" asp-area="Student" asp-controller="Student" asp-action="SaveStudent">
    <table>
        <tr>
            <td>
                Student's Name
            </td>
            <td>:</td>
            <td>
                <input type="text" value="@Model.StudentName" asp-for="@Model.StudentName" />
            </td>
        </tr>
        

        <tr>
            <td>
                Student's' Mobile No.
            </td>
            <td>:</td>
            <td>
                <input type="text" value="@Model.MobileNoStudent" asp-for="@Model.MobileNoStudent" />
            </td>
        </tr>

        <tr>
            <td>
                Student's' Email
            </td>
            <td>:</td>
            <td>
                <input type="text" value="@Model.Email" asp-for="@Model.Email" />
            </td>
        </tr>

        <tr>
            <td>
                Father's Mobile No.
            </td>
            <td>:</td>
            <td>
                <input type="text" value="@Model.MobileNoFather" asp-for="@Model.MobileNoFather" />
            </td>
        </tr>

        <tr>
            <td>
                Address
            </td>
            <td>:</td>
            <td>
                <input type="text" value="@Model.Address" asp-for="@Model.Address" />
            </td>
        </tr>

        <tr>
            <td>
                BirthDate
            </td>
            <td>:</td>
            <td>
                <input type="text"  value="@Model.BirthDate" asp-for="@Model.BirthDate" />
            </td>
        </tr>

        <tr>
            <td>
                Age
            </td>
            <td>:</td>
            <td>
                <input type="text" value="@Model.Age" asp-for="@Model.Age" />
            </td>
        </tr>

        <tr>
            <td>
                IsActive
            </td>
            <td>:</td>
            <td>
                <select asp-for="@Model.IsActive">
                    <option value="@Model.IsActive">True</option>
                    <option value="@Model.IsActive">False</option>
                    <option value="@Model.IsActive">Select</option>
                    
                </select>
            </td>
        </tr>

        <tr>
            <td>
                Gender
            </td>
            <td>:</td>
            <td>
                <select asp-for="@Model.Gender">
                    <option>Male</option>
                    <option>Female</option>
                    <option>Select</option>

                </select>
            </td>
        </tr>

        <tr>
            <td>
                Password
            </td>
            <td>:</td>
            <td>
                <input type="password" value="@Model.Password" asp-for="@Model.Password" />
            </td>
        </tr>

        <tr>
            <td>
                BranchID
            </td>
            <td>:</td>
            <td>
                <input type="text" value="@Model.BranchID" asp-for="@Model.BranchID" />
            </td>
        </tr>

        <tr>
            <td>
                CityID
            </td>
            <td>:</td>
            <td>
                <input type="text" value="@Model.CityID" asp-for="@Model.CityID" />
            </td>
        </tr>



